{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@elmo/shared-types": [
        "../shared/types"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}